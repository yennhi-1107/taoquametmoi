@model IEnumerable<NhaNam.Models.Product>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>QUẢN LÝ THÔNG TIN SẢN PHẨM</h2>
<hr />
@using (Html.BeginForm())
{
    <div class="form-group form-inline">
        Tìm sản phẩm: @Html.TextBox("SearchString", "", new { @class = "form-control" })
        <input type="submit" class="btn btn-default" value="Search" />
    </div>
}
<table class="table">
    <tr>
        <th>
            DÒNG SẢN PHẨM
        </th>
        <th>
            TÊN SẢN PHẨM
        </th>
        <th>
            HÌNH ẢNH
        </th>
        <th class="col-lg-4">
            MÔ TẢ
        </th>
        <th>BÌNH LUẬN</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.NameCate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProName)
            </td>
            <td>
                <img src="@Url.Content(item.ProImage)" width="100" />
            </td>
            <td class="col-lg-4">
                @Html.DisplayFor(modelItem => item.NameDecription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            @*<a hret="/ShoppingCart/AđToCart/@item.ProID" class="btn btn-default">Buy</a>*@
            <td>
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ProID }, new { @class = "btn btn-sm btn-info" }) |
                @Html.ActionLink("Sửa", "Edit", new { id = item.ProID }, new { @class = "btn btn-sm btn-success" }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ProID }, new { @class = "btn btn-sm btn-danger" })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
</p>

